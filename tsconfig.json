{
  "compilerOptions": {
    "module": "ES2022",//UMD
    "target": "ES2022",
    "sourceMap": true,
    "noImplicitAny": false,
    "removeComments": true,
    //    "outFile": "dist/output.js",
    "outDir": "dist2",
    "allowJs": true,//允许js
    //    "checkJs": true,
    "declaration": true,
    "noErrorTruncation": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "src/**/*.js"
  ],
  "exclude": [
    "node_modules"
  ]
}